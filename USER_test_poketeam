def test_tie_pokedex():
    RandomGen.set_seed(123456789)
    t = PokeTeam.random_team("Cynthia", 2, team_size=4, criterion=Criterion.HP)
    p = t.retrieve_pokemon()
    p.lose_hp(4)
    print(t.team, p)
    t.return_pokemon(p)
    print(t.team)
    p = t.retrieve_pokemon()
    p.lose_hp(1)
    t.return_pokemon(p)
    print(t.team)

def test_return_fainted():
    RandomGen.set_seed(123456789)
    t = PokeTeam.random_team("Cynthia", 2, team_size=4, criterion=Criterion.HP)
    p = t.retrieve_pokemon()
    print(p)
    p.lose_hp(13)
    assert p.is_fainted() == True
    t.return_pokemon(p)
    print(t)
